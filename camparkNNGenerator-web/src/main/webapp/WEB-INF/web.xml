<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletCreation</servlet-name>
        <servlet-class>fr.miage.orleans.servlet.ServletCreation</servlet-class>
        <init-param>
            <param-name>Name</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>fr.miage.orleans.servlet.FileServlet</servlet-class>
        <init-param>
            <param-name>basePath</param-name>
            <param-value>D:/ETUDES/M2MIAGE/INDUS/</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCreation</servlet-name>
        <url-pattern>/Creation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
